<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffffff" >
            
			<ImageView
                android:id="@+id/postViewProfileImg"
                android:layout_margin="5dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:src="@drawable/profile" />
			
            <TextView
                android:id="@+id/postViewUserId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/postViewProfileImg"
                android:layout_centerVertical="true"
                android:textColor="#ff4dbcae"
                android:paddingLeft="3dip"
                android:paddingRight="3dip" />

            <TextView
                android:id="@+id/postViewUpdateDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textColor="#ff4dbcae"
                android:paddingLeft="3dip"
                android:paddingRight="3dip" />

        </RelativeLayout>

        <com.parse.ParseImageView
            android:id="@+id/icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" 
            android:background="#ffffffff">

        	<ImageView
        	    android:id="@+id/detail_img"
        	    android:layout_width="30dp"
        	    android:layout_height="30dp"
        	    android:layout_marginTop="5dp"
        	    android:layout_marginLeft="5dp"
        	    android:src="@drawable/icon_detail" />
        	
        	<TextView
        	    android:id="@+id/detail_preview"
        	    android:layout_width="wrap_content"
        	    android:layout_height="wrap_content"
        	    android:layout_toRightOf="@id/detail_img"
        	    android:layout_alignBottom="@id/detail_img"
        	    android:textColor="#ff000000"
        	    android:layout_marginTop="5dp"
        	    android:layout_marginLeft="5dp"
        	    android:text="No Description" />
        	
        	<ImageView
        	    android:id="@+id/clap_btn"
        	    android:layout_width="30dp"
        	    android:layout_height="30dp"
        	    android:layout_marginTop="5dp"
        	    android:layout_marginLeft="5dp"
        	    android:layout_marginBottom="5dp"
        	    android:layout_below="@id/detail_img"
        	    android:src="@drawable/icon_clap" />
        	
        	<TextView
        	    android:id="@+id/poseViewclap_count"
        	    android:layout_width="wrap_content"
        	    android:layout_height="wrap_content"
        	    android:layout_toRightOf="@id/clap_btn"
        	    android:layout_alignBottom="@id/clap_btn"
        	    android:textSize="20dp"
        	    android:textColor="#ff000000"
        	    android:layout_marginTop="5dp"
        	    android:layout_marginLeft="5dp"
        	    android:text="" />

        	<Button
        	    android:id="@+id/comment_btn"
        	    android:layout_alignBottom="@id/clap_btn"
        	    android:layout_width="wrap_content"
        	    android:layout_height="30dp"
        	    android:layout_alignParentRight="true"
        	    android:textSize="12sp"
        	    android:text="Comment" />
        	
        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>